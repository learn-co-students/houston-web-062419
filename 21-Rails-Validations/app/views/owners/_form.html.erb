<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |e| %>
        <li>
            <%= e %>
        </li>
    <% end %>
</ul>
<% end %>


<%= form_for @owner do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.collection_check_boxes :dragon_ids, @dragons, :id, :name %>
<%= f.submit %>
<% end %>
